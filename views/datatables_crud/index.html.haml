.page-header
  %h1=t '.title', default: @model_class.model_name.human.pluralize

%table.table.table-striped{'id' => "#{controller_name}_table", 'data-source' => url_for(format: :json)}
  %thead
    %tr
      = render partial: 'index'
      %th= t '.actions_title', default: t('helpers.actions_title')
  %tbody

%p.actions
  = link_to t('.new', default: t('helpers.links.new')), send("new_#{controller_name.singularize}_path"), class: 'btn btn-primary'
