.page-header
  %h1=t "#{controller_name}.index.title", default: @model_class.model_name.human.pluralize

%table.table.table-striped{'id' => "#{controller_name}_table", 'data-source' => url_for(format: :json)}
  %thead
    %tr
      = render partial: 'index'
      %th= t "#{controller_name}.actions_title", default: t('helpers.actions_title')
  %tbody

%p.actions
  = render 'index_actions'
